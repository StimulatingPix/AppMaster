<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taa.android.app.master"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.taa.android.app.master.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.taa.android.app.master.LibrarySettingsActivity"
            android:label="@string/label_activity_settings" >
        </activity>
        <activity
            android:name="com.taa.android.app.master.LibraryWebActivity"
            android:label="@string/label_activity_web" >
        </activity>
        <activity
            android:name="com.taa.android.app.master.ApplicationsActivity"
            android:label="@string/label_activity_applications" >
        </activity>
        <activity
            android:name="com.taa.android.app.master.StoreActivity"
            android:label="@string/label_activity_store" >
        </activity>
        <activity
            android:name="com.taa.android.app.master.ReleaseActivity"
            android:label="@string/label_activity_release" >
        </activity>
        <activity
            android:name="com.taa.android.app.master.ConfigureActivity"
            android:label="@string/label_activity_configure" >
        </activity>
        <activity
            android:name="com.taa.android.app.master.OrganiseActivity"
            android:label="@string/label_activity_organise" >
        </activity>
        <activity
            android:name="com.taa.android.app.master.LauncherActivity"
            android:label="@string/label_activity_launcher"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
    </application>

</manifest>