<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_release_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/lv_margin"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_release_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_release_app_name"
        android:layout_marginLeft="@dimen/lv_margin"
        android:layout_toRightOf="@+id/tv_release_app_name"
        android:text="@string/app_version" />

</RelativeLayout>
